{
  "family": "backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "taskRoleArn": "arn:aws:iam::197304876963:role/ecsTaskRole-ExecuteCommand",
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "BACKEND_IMAGE_PLACEHOLDER",
      "portMappings": [
        { "containerPort": 5000, "protocol": "tcp" }
      ],
      "essential": true,
      "mountPoints": [
        {
          "sourceVolume": "uploads-volume",
          "containerPath": "/app/uploads",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/backend-task",
          "awslogs-region": "AWS_REGION_PLACEHOLDER",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "uploads-volume",
      "efsVolumeConfiguration": {
        "fileSystemId": "fs-0c756f6d1fe3e95e5",
        "rootDirectory": "/uploads",
        "transitEncryption": "ENABLED"
      }
    }
  ],
  "executionRoleArn": "arn:aws:iam::197304876963:role/ecsTaskExecutionRole"
}
